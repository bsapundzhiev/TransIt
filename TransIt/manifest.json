{
  "name": "TransIt",
  "version": "1.0",
  "description": "Google translate automation.",
  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "options.html"
  },
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },
  "permissions": ["contextMenus", "notifications", "tabs", "http://*.google.com/"],
  "options_page": "options.html",
  "manifest_version": 2
}
