{
  "name": "TransIt",
  "version": "1.0",
  "description": "Google translate automation.",
  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "default_icon": "icon.gif",
    "default_popup": "options.html"
  },
   "icons": {
    "16": "icon.gif",
    "48": "icon.gif",
    "128": "icon.gif"
  },
  "permissions": ["contextMenus", "notifications", "tabs", "http://*.google.com/"],
  "options_page": "options.html",
  "manifest_version": 2
}
